@model Proyecto_TruequesUCR.Models.Administrador

@{
    ViewBag.Title = "Detaller Reporte";
}

@Styles.Render("~/Content/Comerciante/Perfil.css")
@Styles.Render("~/Content/Comerciante/RegistroLogin.css")

<div class="container-fluid h-100 w-100 d-inline-block">
    <div class="row justify-content-center w-100">
        <!-- Contenedor principal -->
        <div class="col-md-7 mt-5 fondo-blanco h-100">
            <div class="row mb-5">
                <!-- Barra izquierda -->
                <div class="col-md-3 fondo-azul p-0 ">
                    <ul class="nav flex-column nav-perfil">
                        <li class="nav-item ">
                            <a href="@Url.Action("Details", "Administrador",new {user=User.Identity.Name })" class="nav-link pt-4 pb-4">Perfil Admin</a>
                        </li>
                        <li class="nav-item activo">
                            <a href="@Url.Action("UsuariosAsignados", "Administrador")" class="nav-link pt-4 pb-4">Mis Usuarios Asignados</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("AgregarAdmin", "Administrador")" class="nav-link pt-4 pb-4">Agregar Administradorr</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("DashBoard", "HistorialTrueques")" class="nav-link pt-4 pb-4">Ver estadísticas</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("AdministrarCategorias", "Administrador" )" class="nav-link pt-4 pb-4">Administrar categorías</a>
                        </li>
                    </ul>
                </div>

                <!-- Cuerpo de Acción Principal -->
                <div class="col-md-9">
                    <!-- Header -->
                    <div class="row">
                        <div class="col-md-12 fondo-azul text-center pt-3">
                            <img src="~/Content/Logo/logoApp.png" alt="Logo de la Aplicación Web" class="foto-vista-admin">
                        </div>
                    </div>

                    <!-- Contenido -->
                    <div class="row">
                        <div class="col-md-12 mt-2">
                            <h5 class="titulo-sec">Detalle Reporte:</h5>
                            <table class="table-responsive-md table-borderless w-100 mt-3">
                                <tbody>

                                    <!-- Denunciante -->
                                    <tr class="d-flex">
                                        <th class="col-md-3 text-right">Denunciante</th>
                                        <td class="col-md-9">@ViewBag.correoDenunciante</td>
                                    </tr>

                                    <!-- Asunto -->
                                    <tr class="d-flex">
                                        <th class="col-md-3 text-right">Asunto</th>
                                        <td class="col-md-9">@ViewBag.asunto</td>
                                    </tr>

                                    <!-- Id reporte -->
                                    <tr class="d-flex">
                                        <th class="col-md-3 text-right">ID Reporte</th>
                                        <td class="col-md-9">@ViewBag.idReporte</td>
                                    </tr>

                                    <!-- Estado -->
                                    <tr class="d-flex">
                                        <th class="col-md-3 text-right">Estado</th>
                                        <td class="col-md-9">@ViewBag.estado</td>
                                    </tr>

                                    @if (@ViewBag.idTrueque != null)
                                    {
                                        <!-- ID trueque -->
                                        <tr class="d-flex">
                                            <th class="col-md-3 text-right">ID trueque asociado</th>
                                            <td class="col-md-9">@ViewBag.idTrueque</td>
                                        </tr>
                                    }


                                    <!--Denunciados -->
                                    @if (@ViewBag.denunciados.Length > 0)
                                    {
                                        for (var i = 0; i < @ViewBag.denunciados.Length; ++i)
                                        {
                                            <tr class="d-flex">
                                                @if (i == 0)
                                                {
                                                    <th class="col-md-3 text-right">Denunciados</th>
                                                }
                                                else
                                                {
                                                    <th class="col-md-3 text-right"></th>
                                                }
                                                <td class="col-md-9">@ViewBag.denunciados[i]</td>
                                            </tr>
                                        }
                                    }

                                    <!--Descripción -->
                                    <tr class="d-flex">
                                        <th class="col-md-3 text-right">Descripción</th>
                                        <td class="col-md-9">@ViewBag.Descripción</td>
                                    </tr>


                                    <tr class="d-flex pt-1 mr-3 mb-3">
                                        <th class="col-md-3 text-right"></th>
                                        <td class="col-sm-4">
                                            @Html.ActionLink("Regresar", "ReportesEnviadosComerciante", "Administrador", new { correo = @ViewBag.correo }, new { @class = "btn btn-verde w-100" })
                                        </td>
                                        <td class="col-sm-4">
                                            @Html.ActionLink("Ir a Suspender Cuenta", "SuspenderCuenta", "Administrador", new { correo = @ViewBag.correo }, new { @class = "btn btn-secundario-adicional w-100" })
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>