@model Proyecto_TruequesUCR.Models.Administrador

@{
    //ViewBag.Title = "Perfil de " + ViewBag.nombre_completo;
}
@Styles.Render("~/Content/Comerciante/Perfil.css")


<div class="container-fluid h-100 w-100 d-inline-block">
    <div class="row justify-content-center w-100">
        <!-- Contenedor principal -->
      
        <div class="col-md-7 mt-5 fondo-blanco h-100">
            <div class="row">
                <!-- Barra izquierda -->
                <div class="col-md-3 fondo-azul p-0">
                    <ul class="nav flex-column nav-perfil">

                        <li class="nav-item activo">
                            <a href="@Url.Action("Details", "Administrador",new {user = User.Identity.Name })" class="nav-link pt-4 pb-4">Agregar Administrador</a>
                        </li>
                        
                    </ul>
                </div>

                <!-- Cuerpo del Perfil -->
                <div class="col-md-9">
                    <!-- Header -->
                    <div class="row">
                        <div class="col-md-12 fondo-azul text-center">
                            <img src="@Url.Content("~/Content/Images/Avatars/")" alt="a" class="foto-perfil">
                        </div>
                    </div>

                    <!-- Cuerpo del Perfil -->
                    <div class="col-md-9">
                        <!-- Header -->
                        <div class="row">
                            <div class="col-md-12 fondo-azul text-center">
                                <img src=" @Url.Content(ViewBag.foto)" id="foto-perfil-editar" alt="Nombre..." class="foto-perfil">
                            </div>
                        </div>

                        <!-- Contenido -->
                        <div class="row">
                            <div class="col-md-12">
                                <h2 class="mt-3 mb-3">Cambiar Contraseña</h2>
                                <form>
                                    <!-- Contraseña -->
                                    <div class="form-row mb-3">
                                        <div class="col-md-12">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text icono-mono">*</span>
                                                </div>
                                                <input type="password" id="entrada-password-actual" class="form-control" aria-describedby="passwordHelp" required placeholder="Contraseña Actual">
                                            </div>
                                            <div id="error-password-actual" class="invalid-feedback"></div>
                                        </div>
                                    </div>

                                    <!-- Contraseña -->
                                    <div class="form-row mb-3">
                                        <div class="col-md-12">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text icono-mono">*</span>
                                                </div>
                                                <input type="password" id="entrada-password" class="form-control" aria-describedby="passwordHelp" required placeholder="Contraseña Nueva">
                                            </div>
                                            <small id="passwordHelp" class="form-text text-muted">
                                                La contraseña debe tener mínimo 8 caracteres, al menos un caracter especial (Ej: @@ . _ -) y al menos un número.
                                            </small>
                                            <div id="error-password" class="invalid-feedback"></div>
                                        </div>
                                    </div>

                                    <!-- Confirmación de Contraseña -->
                                    <div class="form-row mb-3">
                                        <div class="col-md-12">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text icono-mono">*</span>
                                                </div>
                                                <input type="password" id="confirmacion-entrada-password" class="form-control" required placeholder="Confirmar contraseña">
                                            </div>
                                            <div id="error-confirmacion" class="invalid-feedback"></div>
                                        </div>
                                    </div>

                                    <!-- Botón de Cambiar Contraseña -->
                                    <div class="form-row mb-3 justify-content-center">
                                        <div class="col-md-6">
                                            <button type="button" id="guardar-cambio" class="btn btn-verde w-100">Cambiar mi Contraseña</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    @Scripts.Render("~/Scripts/jquery-3.5.0.min.js");
    @Scripts.Render("~/Scripts/Comerciante/ChangePassword.js");
