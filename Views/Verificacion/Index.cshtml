@model Proyecto_TruequesUCR.Models.Verificacion

    <div class="container-fluid h-100 w-100 d-inline-block mt-5">
        <div class="row justify-content-center h-100 w-100">
            <div class="col-md-4 align-self-center">
                <div class="card">
                    <img src="@Url.Content(ViewBag.Imagen)" class="card-img-top" alt="@ViewBag.Title">
                    <div class="card-body">
                        <h5 class="card-title">@ViewBag.Title</h5>
                        <p class="card-text">@ViewBag.Mensaje</p>
                        @if (ViewBag.Exitoso == 1)
                        {
                        <a href="@Url.Action("Login", "Usuario")">Ir a Inicio de Sesión</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>